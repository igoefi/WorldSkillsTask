<Page x:Class="WorldSkills.Pages.DevicePages.PageFindDevice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkills.Pages.DevicePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageFindDevice">

    <Grid>
        <StackPanel
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
        <GroupBox Header="Название устройства">
            <TextBox Name="TxbDeviceName"
                     Width="150"/>
        </GroupBox>
        <Button Click="ClickFindDevice"
                Height="20"
                Content="Find"
                Background="Gray"
                Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Page>
